<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8B0000"
        android:gravity="center">

        <TextView
            android:id="@+id/news_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/head_1"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_pic"
            android:id="@+id/relay"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/NewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/head_1"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="100dp"
                android:textSize="10sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:id="@+id/dotgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:paddingRight="10dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/xw"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/about_us"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xw"
                android:textSize="15sp"
                android:text="About us"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/tz"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/academics"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tz"
                android:text="Academic"
                android:textSize="15sp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/bks"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/admission"
                android:text=""
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bks"
                android:text="Admission"
                android:textSize="15sp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/zs"
                android:background="@drawable/library"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zs"
                android:textSize="15sp"
                android:text="Library"
                android:layout_marginTop="3dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/yjs"
                android:background="@drawable/sports"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yjs"
                android:textSize="15sp"
                android:text="Activity"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/ky"
                android:background="@drawable/awards"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="" />
            <TextView
                android:id="@+id/textView5"
                android:layout_below="@+id/ky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Awards"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:text="Teachers"
            android:textSize="17sp"
            android:drawableRight="@drawable/icon_right"
            android:drawablePadding="5dp"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:src="@drawable/president"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:src="@drawable/chollada2"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:src="@drawable/jahidul7"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:src="@drawable/miller5"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:src="@drawable/supinit3"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:src="@drawable/wichian4"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

        </HorizontalScrollView>




    </LinearLayout>
</ScrollView>
