<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignTop="@+id/textView1" >

    <LinearLayout
        android:id="@+id/LinearLayoutStudents"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context=".StaffActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <ImageView
            android:id="@+id/imageViewSports1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.51"
            android:gravity="center"
            android:src="@drawable/sports_1" />

        <TextView
            android:id="@+id/textViewSports1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/attached"
            android:gravity="center"
            android:text="@string/sports_string31"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewSports2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sports_2" />

        <TextView
            android:id="@+id/textViewSports2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/attached"
            android:gravity="center"
            android:text="@string/sports_string2"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewSports3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sports_3" />

        <TextView
            android:id="@+id/textViewSports3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/attached"
            android:gravity="center"
            android:text="@string/sports_string3"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>
